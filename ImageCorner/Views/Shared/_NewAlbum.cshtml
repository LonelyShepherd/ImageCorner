@model ImageCorner.Models.CreateAlbumViewModal

<div></div>
<div class="modal-content">
    <div class="modal-header">
        <div>
            <h4>New Album</h4>
            <div>
                <div class="js-select">
                    <span class="js-select-drop selected"></span>
                    <div class="menu" aria-hidden="true">
                        <ul>
                            <li class="default">Public</li>
                            <li>Private</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-body">
        <label for="album-name">Name</label>
        <input id="album-name" type="text" />
        <span>Select images <small>or</small> <label for="upload-to-album">Upload images<input id="upload-to-album" type="file" multiple accept="image/*" /></label></span>
        <ul class="clearfix">
            @foreach (var image in Model.Images)
            {
                <li id="@image.Id" class="selectable">
                    <span></span>
                    <img src="~/Uploads/@Model.UserId/@image.Name" />
                </li>
            }
        </ul>
    </div>
    <div class="modal-footer">
        <div>
            <button type="button" class="btn btn-default">Cancel</button>
            <button type="button" class="btn btn-primary">Create</button>
        </div>
    </div>
</div>
