@model ImageCorner.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Log in - ImageCorner";
}

<header class="sign-in-header">
    <nav>
        <a href="@Url.Action("Index", "Home")" class="brand">
            <img src="~/assets/images/logo.png" />
            ImageCorner
        </a>
        @Html.Partial("_LoginPartial")
    </nav>
    <div class="account-form-container">
        <div class="account-form-content">
            <h1>Sign in <small>or @Html.ActionLink("create an account", "Register")</small></h1>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new {  }))
            {
                <span class="account-form-error">@Model.InvalidLogin</span>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new {  })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new {  })
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Log in" class="btn-submit" />
                </div>
                @*
                Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>
                *@
            }
        </div>
    </div>
</header>
